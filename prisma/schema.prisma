generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model Subtask {
  subtaskId Int @id @default(autoincrement())
  title String @unique
  isCompleted Boolean @default(false)
  goal Goal @relation(fields: [subtaskId], references: [goalId])
}

model Goal {
  goalId Int @id @default(autoincrement())
  title String @unique
  content String? 
  deadline BigInt
  subtasks Subtask[]
}
